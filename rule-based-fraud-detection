import time

# 1. Sample transaction data (simulating real-time transactions)
transactions = [
    {"transaction_id": 1, "amount": 1200, "location": "New York"},
    {"transaction_id": 2, "amount": 50, "location": "Los Angeles"},
    {"transaction_id": 3, "amount": 4000, "location": "London"},
    {"transaction_id": 4, "amount": 200, "location": "New York"},
    {"transaction_id": 5, "amount": 3200, "location": "Tokyo"},
]

# 2. Define fraud detection rule
def is_suspicious(transaction):
    # Rule: Flag transactions with an amount greater than $3000
    if transaction["amount"] > 3000:
        return True
    return False

# 3. Real-time transaction monitoring
print("Monitoring transactions...\n")
for transaction in transactions:
    print(f"Processing Transaction: {transaction}")
    
    # Check if the transaction is suspicious
    if is_suspicious(transaction):
        print(f"⚠️ ALERT: Suspicious transaction detected! Transaction ID: {transaction['transaction_id']}")
    
    # Simulate real-time delay
    time.sleep(2)

